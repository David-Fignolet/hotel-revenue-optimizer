# Fichier d'exemple pour les variables d'environnement
# Copiez ce fichier vers .env et remplissez les valeurs appropriées

# Clés API pour les services externes
OPENWEATHERMAP_API_KEY=votre_cle_api_openweathermap
GOOGLE_MAPS_API_KEY=votre_cle_api_google_maps

# Paramètres de l'application
LOG_LEVEL=INFO
ENVIRONMENT=development

# Paramètres de la base de données (si applicable)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=hotel_revenue
# DB_USER=user
# DB_PASSWORD=password

# Paramètres de l'application Streamlit
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true

# Configuration du cache (optionnel)
CACHE_ENABLED=True
CACHE_TTL=3600  # en secondes

# Paramètres de sécurité (à modifier en production)
SECRET_KEY=votre_cle_secrete_tres_longue_et_complexe
DEBUG=True

# Configuration des e-mails (optionnel)
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=user@example.com
# EMAIL_HOST_PASSWORD=votre_mot_de_passe_email
# DEFAULT_FROM_EMAIL=noreply@example.com

# Configuration des logs
LOG_FILE=app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5
